{
  "buildCommand": "npm run install:api && cd backend && npm run build",
  "outputDirectory": "public",
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/auth-callback",
      "destination": "/auth-callback.html"
    }
  ]
}